pipeline {
    agent any
    
    tools {
        maven 'maven'
    }
    
    environment {
        SERVER_IP = '98.86.230.111'  // Your server IP
        TOMCAT_PORT = '8090'
        APP_CONTEXT = 'addressbook'
        BUILD_TIMESTAMP = "${new Date().format('yyyy-MM-dd HH:mm:ss')}"
    }
    
    triggers {
        GenericTrigger(
            genericVariables: [
                [key: 'ref', value: '$.ref'],
                [key: 'pusher', value: '$.pusher.name'],
                [key: 'repository', value: '$.repository.name'],
                [key: 'commit_message', value: '$.head_commit.message']
            ],
            regexpFilterText: '$ref',
            regexpFilterExpression: 'refs/heads/(main|master)',
            token: 'addressbook-webhook-token',
            causeString: 'Triggered by GitHub webhook - Push by $pusher',
            printContributedVariables: true,
            printPostContent: false
        )
    }
    
    stages {
        stage("üîç Webhook Info") {
            steps {
                script {
                    echo "üöÄ ==================================="
                    echo "üîó WEBHOOK TRIGGERED BUILD"
                    echo "üöÄ ==================================="
                    echo "üìÖ Build Time: ${BUILD_TIMESTAMP}"
                    echo "üåø Branch: ${env.ref ?: 'main'}"
                    echo "üë§ Pushed by: ${env.pusher ?: 'Unknown'}"
                    echo "üì¶ Repository: ${env.repository ?: 'cloud-devops-learning-path'}"
                    echo "üí¨ Commit: ${env.commit_message ?: 'No message'}"
                    echo "üöÄ ==================================="
                }
            }
        }
        
        stage("üì• Checkout") {   
            steps {
                script {
                    echo "üîÑ Checking out code from repository..."
                }
                git branch: 'main', url: 'https://github.com/manikcloud/cloud-devops-learning-path.git'
                script {
                    echo "‚úÖ Code checkout completed successfully"
                }
            }    
        }
        
        stage('üìÇ Navigate to Project') {
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/6.3_git_integration') {
                    script {
                        echo "üìç Current directory: $(pwd)"
                        echo "üìã Project files:"
                    }
                    sh "pwd && ls -la"
                }
            }
        }
        
        stage('üßπ Maven Clean') {
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/6.3_git_integration') {
                    script {
                        echo "üßπ Cleaning previous build artifacts..."
                    }
                    sh "mvn clean"
                    script {
                        echo "‚úÖ Clean completed successfully"
                    }
                }
            }
        }
        
        stage('üî® Maven Build') {
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/6.3_git_integration') {
                    script {
                        echo "üî® Compiling source code..."
                    }
                    sh "mvn compile"
                    script {
                        echo "‚úÖ Build completed successfully"
                    }
                }
            }
        }
        
        stage("üß™ Unit Test") {          	 
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/6.3_git_integration') {
                    script {
                        echo "üß™ Running unit tests..."
                    }
                    sh "mvn test"
                    script {
                        echo "‚úÖ Tests completed successfully"
                    }
                }
            }
        }
        
        stage("üì¶ Maven Package") {
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/6.3_git_integration') {
                    script {
                        echo "üì¶ Creating WAR package..."
                    }
                    sh "mvn package"
                    script {
                        echo "‚úÖ Package created successfully"
                        sh "ls -la target/*.war"
                    }
                }
            }
        }
        
        stage("Deploy to Tomcat") {          	 
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/6.3_git_integration') {
                    script {
                        echo "Deploying to Tomcat server..."
                        echo "Target: http://${SERVER_IP}:${TOMCAT_PORT}/${APP_CONTEXT}"
                    }
                    deploy adapters: [tomcat9(credentialsId: 'tomcat-9', path: '', url: "http://${SERVER_IP}:${TOMCAT_PORT}")], 
                           contextPath: "/${APP_CONTEXT}", 
                           war: '**/target/*.war'
                    script {
                        echo "Deployment completed successfully"
                        echo "Application URL: http://${SERVER_IP}:${TOMCAT_PORT}/${APP_CONTEXT}"
                    }
                }
            }
        }  	
    }
    
    post {
        always {
            dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/6.3_git_integration') {
                script {
                    echo "Publishing test results..."
                    if (fileExists('target/surefire-reports/*.xml')) {
                        junit 'target/surefire-reports/*.xml'
                    } else {
                        echo "No test results found"
                    }
                }
            }
        }
        success {
            script {
                echo "WEBHOOK BUILD SUCCESSFUL!"
                echo "Build completed at: ${BUILD_TIMESTAMP}"
                echo "Application deployed: http://${SERVER_IP}:${TOMCAT_PORT}/${APP_CONTEXT}"
                echo "Triggered by: ${env.pusher ?: 'GitHub webhook'}"
            }
        }
        failure {
            script {
                echo "WEBHOOK BUILD FAILED!"
                echo "Build failed at: ${BUILD_TIMESTAMP}"
                echo "Triggered by: ${env.pusher ?: 'GitHub webhook'}"
                echo "Check console output for details"
            }
        }
        unstable {
            script {
                echo "Build completed with warnings"
                echo "Check test results for details"
            }
        }
    }
}
