pipeline {
    agent any
    
    tools {
        maven 'maven'
    }
    
    environment {
        SERVER_IP = '3.82.130.168'  // Replace with your server IP
        TOMCAT_PORT = '8090'
        APP_CONTEXT = 'addressbook'
        BUILD_TIMESTAMP = "${new Date().format('yyyy-MM-dd HH:mm:ss')}"
    }
    
    triggers {
        GenericTrigger(
            genericVariables: [
                [key: 'ref', value: '$.ref'],
                [key: 'pusher', value: '$.pusher.name'],
                [key: 'repository', value: '$.repository.name'],
                [key: 'commit_message', value: '$.head_commit.message']
            ],
            regexpFilterText: '$ref',
            regexpFilterExpression: 'refs/heads/(main|master)',
            token: 'addressbook-webhook-token',
            causeString: 'Triggered by GitHub webhook - Push by $pusher',
            printContributedVariables: true,
            printPostContent: false
        )
    }
    
    stages {
        stage("ğŸ” Webhook Info") {
            steps {
                script {
                    echo "ğŸš€ ==================================="
                    echo "ğŸ”— WEBHOOK TRIGGERED BUILD"
                    echo "ğŸš€ ==================================="
                    echo "ğŸ“… Build Time: ${BUILD_TIMESTAMP}"
                    echo "ğŸŒ¿ Branch: ${env.ref ?: 'main'}"
                    echo "ğŸ‘¤ Pushed by: ${env.pusher ?: 'Unknown'}"
                    echo "ğŸ“¦ Repository: ${env.repository ?: 'cloud-devops-learning-path'}"
                    echo "ğŸ’¬ Commit: ${env.commit_message ?: 'No message'}"
                    echo "ğŸš€ ==================================="
                }
            }
        }
        
        stage("ğŸ“¥ Checkout") {   
            steps {
                script {
                    echo "ğŸ”„ Checking out code from repository..."
                }
                git branch: 'main', url: 'https://github.com/manikcloud/cloud-devops-learning-path.git'
                script {
                    echo "âœ… Code checkout completed successfully"
                }
            }    
        }
        
        stage('ğŸ“‚ Navigate to Project') {
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/6.3_git_integration') {
                    script {
                        echo "ğŸ“ Current directory: $(pwd)"
                        echo "ğŸ“‹ Project files:"
                    }
                    sh "pwd && ls -la"
                }
            }
        }
        
        stage('ğŸ§¹ Maven Clean') {
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/6.3_git_integration') {
                    script {
                        echo "ğŸ§¹ Cleaning previous build artifacts..."
                    }
                    sh "mvn clean"
                    script {
                        echo "âœ… Clean completed successfully"
                    }
                }
            }
        }
        
        stage('ğŸ”¨ Maven Build') {
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/6.3_git_integration') {
                    script {
                        echo "ğŸ”¨ Compiling source code..."
                    }
                    sh "mvn compile"
                    script {
                        echo "âœ… Build completed successfully"
                    }
                }
            }
        }
        
        stage("ğŸ§ª Unit Test") {          	 
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/6.3_git_integration') {
                    script {
                        echo "ğŸ§ª Running unit tests..."
                    }
                    sh "mvn test"
                    script {
                        echo "âœ… Tests completed successfully"
                    }
                }
            }
        }
        
        stage("ğŸ“¦ Maven Package") {
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/6.3_git_integration') {
                    script {
                        echo "ğŸ“¦ Creating WAR package..."
                    }
                    sh "mvn package"
                    script {
                        echo "âœ… Package created successfully"
                        sh "ls -la target/*.war"
                    }
                }
            }
        }
        
        stage("ğŸš€ Deploy to Tomcat") {          	 
            steps {
                dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/6.3_git_integration') {
                    script {
                        echo "ğŸš€ Deploying to Tomcat server..."
                        echo "ğŸ¯ Target: http://${SERVER_IP}:${TOMCAT_PORT}/${APP_CONTEXT}"
                    }
                    deploy adapters: [tomcat9(credentialsId: 'tomcat-9', path: '', url: "http://${SERVER_IP}:${TOMCAT_PORT}")], 
                           contextPath: "/${APP_CONTEXT}", 
                           war: '**/target/*.war'
                    script {
                        echo "âœ… Deployment completed successfully"
                        echo "ğŸŒ Application URL: http://${SERVER_IP}:${TOMCAT_PORT}/${APP_CONTEXT}"
                    }
                }
            }
        }  	
    }
    
    post {
        always {
            dir('Section-2-DevOps/Session-4_Jenkins/06_final_project/6.3_git_integration') {
                script {
                    echo "ğŸ“Š Publishing test results..."
                }
                junit 'target/surefire-reports/*.xml'
            }
        }
        success {
            script {
                echo "ğŸ‰ =================================="
                echo "ğŸ‰ WEBHOOK BUILD SUCCESSFUL!"
                echo "ğŸ‰ =================================="
                echo "âœ… Build completed at: ${BUILD_TIMESTAMP}"
                echo "ğŸŒ Application deployed: http://${SERVER_IP}:${TOMCAT_PORT}/${APP_CONTEXT}"
                echo "ğŸ‘¤ Triggered by: ${env.pusher ?: 'GitHub webhook'}"
                echo "ğŸ‰ =================================="
            }
        }
        failure {
            script {
                echo "âŒ =================================="
                echo "âŒ WEBHOOK BUILD FAILED!"
                echo "âŒ =================================="
                echo "ğŸ’¥ Build failed at: ${BUILD_TIMESTAMP}"
                echo "ğŸ‘¤ Triggered by: ${env.pusher ?: 'GitHub webhook'}"
                echo "ğŸ” Check console output for details"
                echo "âŒ =================================="
            }
        }
        unstable {
            script {
                echo "âš ï¸ Build completed with warnings"
                echo "ğŸ” Check test results for details"
            }
        }
    }
}
